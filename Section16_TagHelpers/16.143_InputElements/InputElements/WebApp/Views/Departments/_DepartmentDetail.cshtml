@model Department

<form method='post' action='/departments/@ViewBag.Action'>

    @if (ViewBag.Action == "edit")
    {
        <input asp-for="Id" />
    }        

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label" ></label>
        </div>
        <div class="col-6">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input asp-for="Description" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <button type='submit' class="btn btn-primary">Save</button>
            &nbsp;&nbsp;
            <a href="/departments" class="btn btn-primary">Cancel</a>
        </div>
        <div class="col-4">
            @if (ViewBag.Action == "edit")
            {
                <a href="/employees/departmentemployees/@Model.Id" class="btn btn-link">Check Employees</a>
            }
        </div>
    </div>
</form>

